<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KahveHakkiActivity">

    <TextView
        android:id="@+id/yorum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:text="Maalesef :("
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvKahveHakki"
        app:layout_constraintTop_toBottomOf="@id/yorum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/kahve_hakki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvKahveHakki"
        app:layout_constraintStart_toStartOf="@id/tvKahveHakki"
        app:layout_constraintEnd_toEndOf="@id/tvKahveHakki"
        android:id="@+id/btnDükkanaGit"
        android:background="@drawable/button_background"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Dükkana Git" />

</androidx.constraintlayout.widget.ConstraintLayout>